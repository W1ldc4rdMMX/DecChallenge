                    <div class="well">
                        username <br>
                        password <br>
                        email <br>
                        role <br>
                        Active <br>
                    </div>
                </div>
            </div>
            <br><hr>
        {% endblock %}

        {% block sysSettings %}
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#sysSettings">
                <span class="glyphicon glyphicon-collapse-down"></span> Current Users
            </button>
            <div id="sysSettings" class="collapse">
                <div class="col-sm-12">
                    <div class="well">
                        username <br>
                        password <br>
