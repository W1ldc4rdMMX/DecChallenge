            <div id="currentUsers" class="panel-collapse collapse">
                <div class="container">
                <div class="col-sm-3">
                    <div class="well">
                        <select size="10" style="max-width:90%;">
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.username }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="well">
                    username <br>
                    password <br>
                    email <br>
                    role <br>
                    Active <br>
                    </div>
                </div>
                    </div>
            </div>
            <br><hr>
        {% endblock %}

        {% block addUsers %}
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#addUsers">
                <span class="glyphicon glyphicon-collapse-down"></span> Current Users
            </button>
            <div id="addUsers" class="collapse">
                <div class="col-sm-6">
                    <div class="well">
                        username <br>
                        password <br>
                        email <br>
                        role <br>
                        Active <br>
                    </div>
                </div>
